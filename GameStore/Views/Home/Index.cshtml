@model HomeViewModel

<h3>@ViewBag.Message</h3>

@await Html.PartialAsync("Carousel")

<h2>Prefered games of the month! </h2>
<h4>Clients preferences - just for you!</h4>

<div class="row">
    @foreach (var game in Model.PreferredGames)
    {
        @await Html.PartialAsync("GameSummary", game)
    }
</div>