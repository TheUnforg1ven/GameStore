@model LoginViewModel

<h1>Reset Your Password</h1>

<div class="row justify-content-center align-items-center h-100 loginForm">
    <div class="col-md-8 col-md-offset-2">
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            <div class="form-group">
                <label class="col-md-2 control-label">Username</label>
                <div class="col-md-10">
                    <input name="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success btn-lg btn-block" value="Reset Password" />
                </div>
            </div>
        </form>
    </div>
</div>